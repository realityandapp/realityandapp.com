<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category, collection: Category.all %>
    <%= f.input :title %>
    <%= f.input :introduction, as: :text %>
    <%= f.input :content, :as => :kindeditor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
