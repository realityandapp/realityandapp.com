<%= simple_form_for(@menu) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%#= f.input :parent, collection: Menu.all, prompt: '请选择父分类,不选择则为顶级分类' %>
    <%= f.input :name %>
    <%= f.input :ord %>
    <%= f.input :url %>
    <%= f.input :page, collection: [Page, Post], as: :grouped_select, group_method: :absolute, group_label_method: :to_s %>
    <%= f.input :category, collection: Category.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
